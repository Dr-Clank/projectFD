{% extends 'base.html.twig' %}

{% block body %}
<div id='main-title'>
    <h1>Nouvelle recherche</h1> 
</div>
<div id='info-main'>
    <p>Vous pouvez chercher la météo sur 7 jours : en cherchant avec le nom d'une ville ou soit avec des coordonnées !</p>
</div>
<div id='info-main'>
    <p>Si tous les champs sont remplie, seul la Ville sera prise en compte</p>
</div>
{% for message in app.flashes('error') %}
    <div class="alert-danger">
        {{ message }}
    </div>
{% endfor %}

{{ form_start(form) }}
    <div id="add-search-body">

    <div class="form-group">
        {{ form_label(form.city) }}
        {{ form_errors(form.city) }}
        {{ form_widget(form.city, {'attr': {'class': 'input'}}) }}
        {{ form_help(form.city) }}
    </div>

    <div class="form-group">
        {{ form_label(form.latitude) }}
        {{ form_errors(form.latitude) }}
        {{ form_widget(form.latitude, {'attr': {'class': 'input'}}) }}
        {{ form_help(form.latitude) }}
    </div>

    <div class="form-group">
        {{ form_label(form.longitude) }}
        {{ form_errors(form.longitude) }}
        {{ form_widget(form.longitude, {'attr': {'class': 'input'}}) }}
        {{ form_help(form.longitude) }}
    </div>

    <div class="form-group">
        {{ form_row(form.save) }}
    </div>

</div>

{{ form_end(form) }}

{% endblock %}